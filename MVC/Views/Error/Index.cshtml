
@model MVC.Models.ExceptionsView
@{
    ViewBag.Title = "Error";
}
<br />
<main>
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3 text-center">
                <div class="alert alert-danger mt-5">
                    <h2>Error!</h2>
                    <p><strong>Detalle del error:</strong> @Html.DisplayFor(ex => ex.Message)</p>
                    @if (!string.IsNullOrEmpty(Model.StackTrace))
                    {
                        <p><strong>Detalles del Error:</strong></p>
                        <pre>@Html.Raw(Model.StackTrace)</pre>
                    }

                </div>
            </div>
        </div>
    </div>
</main>
